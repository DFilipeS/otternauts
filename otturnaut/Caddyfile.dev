# Development Caddyfile - uses unprivileged ports for rootless Podman
#
# HTTP on 8080, HTTPS on 8443
# Admin API on 2019 (default)

{
	# Use higher ports for rootless containers
	http_port 8080
	https_port 8443

	# Local/dev mode - use self-signed certs
	local_certs
}

# Default catch-all - responds with 404
# Routes are added dynamically via the admin API
:8080 {
	respond "Otturnaut: No route configured" 404
}
