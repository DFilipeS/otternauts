# Production Caddyfile - standard ports 80/443
#
# Requires rootful Podman or: sysctl net.ipv4.ip_unprivileged_port_start=80
# Admin API on 2019 (default)

{
	# Standard HTTP/HTTPS ports
	http_port 80
	https_port 443
}

# Default catch-all - responds with 404
# Routes are added dynamically via the admin API
:80 {
	respond "Otturnaut: No route configured" 404
}
